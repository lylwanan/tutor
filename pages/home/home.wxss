@import '../../styles/common.wxss';

.address-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 88rpx;
    background: #ffffff;
    vertical-align: middle;
}
.select-address {
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow: hidden;
    height: 88rpx;
}
.address-name {
    font-size: 30rpx;
    margin-left: 10rpx;
    color: #666666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.location-icon {
    width: 45rpx;
    height: 45rpx;
    margin-right: 30rpx;
}
.address-icon {
    width: 40rpx;
    height: 40rpx;
    margin: 0rpx 10rpx 0rpx 30rpx;
}
.search-box {
    display: flex;
    margin: 20rpx;
    margin-top: 0;
    align-items: center;
}
.input-box {
    display: flex;
    flex: 1;
    align-items: center;
    height: 72rpx;
    border-radius: 4rpx;
    padding: 0 10rpx;
    background-color: #F5F5F5;
}
.input-box image {
    margin: 0;
    display: block;
}
.search-icon {
    width: 48rpx;
    height: 48rpx;
}
.input-placeholder {
    color: #999;
}
.search-input {
    flex: 1;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    margin-left: 10rpx;
}
.clean-box {
    margin: 0 10rpx;
    width: 28rpx;
    height: 28rpx;
    background: #8F8E94;
    border-radius: 50%;
}
.clean-icon {
    width: 28rpx;
    height: 28rpx;
}
.cancel {
    text-align: center;
    font-size: 30rpx;
    padding: 0 30rpx;
}
.swiper-bar {
    height: 120rpx;
    margin: 0 20rpx;
    overflow: hidden;
}
.swiper {
    width: 100%;
    height: 100%;
}
.slide-image {
    margin: 0;
    width: 150rpx;
    height: 120rpx;
    display: block;
    border-radius: 4rpx;
}
.sright {
    flex: 1;
    color: #333;
    font-size: 26rpx;
}
.s2 {
    flex: 1;
    font-size: 32rpx;
    font-weight: 500;
    justify-self: center;
}
.s3 {
    width: 100%;
    display: block;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.s4 {
    color: #999;
    width: 120rpx;
    text-align: center;
    padding-left: 20rpx;
    border-left: 1px solid #F5F5F5;
}
.nav-bar {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    background: #FFF;
    background-size: 100% 100%;
    padding: 35rpx 0;
}
.nav-item {
    width: 20%;
}
.nav-img {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
}
.nav-img image {
    width: 80rpx;
    height: 80rpx;
}
.nav-cat {
    height: 34rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 26rpx;
    color: #333;
    overflow: hidden;
    margin-top: 20rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.marquee {
    height: 40rpx;
    margin: 0 20rpx;
    padding: 20rpx;
    font-size: 28rpx;
    color: #333;
    border-radius: 15rpx;
    border: 1px solid #F5F5F5;
}
.marquee swiper {
    flex: 1;
    margin-left: 20rpx;
}
.mrow {
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.mm {
    color: #DDD;
    margin: 0 20rpx;
}
.ht {
    height: 100rpx;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 100rpx;
}
.hrow image {
    width: 80rpx;
    height: 80rpx;
    display: block;
    border-radius: 100%;
    align-self: flex-start;
}
.hrc,
.hrct {
    flex: 1;
    overflow: hidden;
}
.hrc {
    font-size: 26rpx;
    margin-left: 20rpx;
}
.hrct .s2 {
    margin-bottom: 10rpx;
}
.hrow .hrc {
    border-bottom: 1px solid #F5F5F5;
}
.at {
    font-size: 26rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    padding: 8rpx 20rpx;
    border: 1px solid #F5F5F5;
}
.collected {
    color: #FFF;
    background: rgba(0, 132, 255, .6);
}